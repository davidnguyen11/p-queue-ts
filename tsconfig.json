{
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "CommonJS",
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "ES2015",
      "DOM"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}